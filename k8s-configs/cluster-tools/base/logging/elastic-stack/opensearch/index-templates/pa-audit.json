{
  "index_patterns": [
    "pa-audit-*"
  ],
  "template": {
    "settings": {
      "index.number_of_shards": "3",
      "index.number_of_replicas": "1",
      "index.refresh_interval": "1s",
      "index": {
        "routing": {
          "allocation": {
            "require": {
              "temp": "hot"
            }
          }
        },
        "plugins": {
          "index_state_management": {
            "rollover_alias": "pa-audit"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "date": {
          "type": "date"
        },
        "@timestamp": {
          "type": "date"
        },
        "geoip": {
          "dynamic": "true",
          "properties": {
            "ip": {
              "type": "ip"
            },
            "latitude": {
              "type": "half_float"
            },
            "country_name": {
              "type": "text",
              "fields": {
                "keyword": {
                  "ignore_above": 256,
                  "type": "keyword"
                }
              }
            },
            "location": {
              "type": "geo_point"
            },
            "longitude": {
              "type": "half_float"
            }
          }
        },
        "@version": {
          "type": "text",
          "fields": {
            "keyword": {
              "ignore_above": 256,
              "type": "keyword"
            }
          }
        },
        "requestUri": {
          "type": "text",
          "fields": {
            "keyword": {
              "ignore_above": 256,
              "type": "keyword"
            }
          }
        },
        "roundTripMS": {
          "type": "long"
        },
        "responseCode": {
          "type": "long"
        },
        "timestamp": {
          "type": "text"
        }
      }
    }
  },
  "composed_of": [],
  "priority": 0
}